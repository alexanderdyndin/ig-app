<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/postText"
        style="@style/InterGroupWhiteTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:textColorHint="@color/commentEditTextHintColor"
        android:hint="@string/add_photo_or_text"
        android:padding="@dimen/big_padding" />

    <com.intergroupapplication.presentation.customview.CreateImageGalleryView
        android:id="@+id/createImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <com.intergroupapplication.presentation.customview.CreateVideoGalleryView
        android:id="@+id/createVideoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <com.intergroupapplication.presentation.customview.CreateAudioGalleryView
        android:id="@+id/createAudioContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
</LinearLayout>