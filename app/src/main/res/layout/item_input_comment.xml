    <Button
        android:id="@+id/btnScrollDown"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_scroll_down"
        android:layout_marginBottom="@dimen/little_margin"
        android:layout_marginEnd="@dimen/middle_margin"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/iconPanel"
        app:layout_constraintEnd_toEndOf="@+id/iconPanel" />

    <TextView
        android:id="@+id/commentCountArrow"
        style="@style/TextDark10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@drawable/bg_accent2dp"
        android:padding="2dp"
        android:visibility="gone"
        android:text="29258"
        app:layout_constraintBottom_toTopOf="@+id/btnScrollDown"
        app:layout_constraintEnd_toEndOf="@+id/btnScrollDown"
        app:layout_constraintStart_toStartOf="@+id/btnScrollDown"
        app:layout_constraintTop_toTopOf="@+id/btnScrollDown" />

</androidx.constraintlayout.widget.ConstraintLayout>

