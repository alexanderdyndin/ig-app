<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorInput">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/postMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:layout_editor_absoluteX="4dp">
        <ImageView
            android:id="@+id/bgPostMusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_post_music"
            app:layout_constraintEnd_toStartOf="@id/detachImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/trackName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/TextAccent14sp"
            app:layout_constraintEnd_toStartOf="@+id/detachImage"
            app:layout_constraintStart_toStartOf="@+id/bgPostMusic"
            app:layout_constraintTop_toTopOf="@+id/bgPostMusic" />

        <ImageView
            android:id="@+id/detachImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_delete"
            app:layout_constraintBottom_toBottomOf="@+id/bgPostMusic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/startLineSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/start_line_seek_bar"
            app:layout_constraintBottom_toBottomOf="@+id/bgPostMusic"
            app:layout_constraintStart_toStartOf="@+id/bgPostMusic"
             />

        <SeekBar
            android:id="@+id/exo_progress_placeholder"
            style="@style/PostSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/startLineSeekBar"
            app:layout_constraintTop_toTopOf="@id/startLineSeekBar" />

        <!--        <View android:id="@id/exo_progress_placeholder"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="26dp"-->
        <!--            app:layout_constraintEnd_toEndOf="@+id/exo_duration"-->
        <!--            app:layout_constraintStart_toEndOf="@+id/startLineSeekBar"-->
        <!--            app:layout_constraintTop_toTopOf="@id/startLineSeekBar"/>-->


        <TextView
            android:id="@+id/darkCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/uploading_image_foreground_rectangle_shadow_drawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible" />
        <com.budiyev.android.circularprogressbar.CircularProgressBar
            android:id="@+id/imageUploadingProgressBar"
            android:layout_width="@dimen/image_uploading_circular_bar_size"
            android:layout_height="@dimen/image_uploading_circular_bar_size"
            android:layout_gravity="center"
            android:visibility="invisible"
            app:animateProgress="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:backgroundStrokeColor="#424242"
            app:backgroundStrokeWidth="2dp"
            app:foregroundStrokeColor="#ffffff"
            app:foregroundStrokeWidth="3dp"
            app:progressAnimationDuration="2000" />

        <ImageView
            android:id="@+id/stopUploading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_close_white" />

        <LinearLayout
            android:id="@+id/refreshContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_replay" />

            <TextView
                style="@style/InterGroupSmallWhiteTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/little_margin"
                android:text="@string/error" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>