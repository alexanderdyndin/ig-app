                        android:layout_gravity="center"
                        android:padding="8dp"
                        style="@style/TextAccent12sp"
                        android:drawableRight="@drawable/ic_arrow_down_blue"
                        android:drawablePadding="6dp"
                        android:text="Развернуть"/>
                </FrameLayout>


