<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groupClickPlace"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_group_item"
    android:padding="@dimen/big_padding">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/groupAvatarHolder"
        android:layout_width="@dimen/group_logo_size_in_list"
        android:layout_height="@dimen/group_logo_size_in_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fresco:placeholderImage="@drawable/application_logo"
        fresco:roundAsCircle="true" />



    <TextView
        android:id="@+id/groupName"
        style="@style/InterGroupAutoscrollWhiteTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/followerCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/groupAvatarHolder"
        app:layout_constraintTop_toTopOf="@+id/groupAvatarHolder"
        tools:text="Группа 1" />

    <TextView
        android:id="@+id/followerCount"
        style="@style/InterGroupResponseToCommentTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/groupAvatarHolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/groupAvatarHolder"
        app:layout_constraintTop_toBottomOf="@+id/groupName"
        tools:text="7 участников" />

    <TextView
        android:id="@+id/postCommentsCount"
        style="@style/InterGroupResponseToCommentTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/groupAvatarHolder"
        app:layout_constraintTop_toBottomOf="@+id/followerCount"
        tools:text="7 постов" />
    <TextView
        android:id="@+id/likesCount"
        style="@style/InterGroupResponseToCommentTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/groupAvatarHolder"
        app:layout_constraintTop_toBottomOf="@+id/postCommentsCount"
        tools:text="7 лайков" />
    <TextView
        android:id="@+id/dislikesCount"
        style="@style/InterGroupResponseToCommentTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/groupAvatarHolder"
        app:layout_constraintTop_toBottomOf="@+id/likesCount"
        tools:text="7 дизлайков" />

    <Button
        android:id="@+id/subscribeButton"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupAvatarHolder"
        android:text="X"
        />


</androidx.constraintlayout.widget.ConstraintLayout>