<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="288dp"
    android:layout_height="match_parent"
    android:background="@color/mainBlack">

    <ImageView
        android:id="@+id/bgMenuAva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_menu_ava"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <com.github.florent37.shapeofview.ShapeOfView
        android:id="@+id/group_avatar"
        android:layout_width="@dimen/user_header_menu_view_size"
        android:layout_height="@dimen/user_header_menu_view_size"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toEndOf="@+id/bgMenuAva"
        app:layout_constraintStart_toStartOf="@id/bgMenuAva"
        app:layout_constraintTop_toTopOf="@id/bgMenuAva"
        app:shape_clip_drawable="@drawable/ava_group_create">

        <com.intergroupapplication.presentation.customview.AvatarImageUploadingView
            android:id="@+id/groupAvatarHolder"
            android:layout_width="@dimen/user_header_menu_view_size"
            android:layout_height="@dimen/user_header_menu_view_size" />

    </com.github.florent37.shapeofview.ShapeOfView>

    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="btn"
        android:padding="@dimen/middle_padding"
        android:src="@drawable/ic_settings_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/rollUpMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="btn"
        android:padding="@dimen/middle_padding"
        android:src="@drawable/ic_roll_up_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/reputationDislikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/little_margin"
        android:padding="@dimen/middle_padding"
        app:layout_constraintBottom_toBottomOf="@+id/bgMenuAva"
        app:layout_constraintStart_toStartOf="@+id/bgMenuAva">

        <TextView
            android:id="@+id/item_group__dislike"
            style="@style/TextDislike14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            app:drawableLeftCompat="@drawable/icon_dislike"
            tools:text="150" />
    </FrameLayout>

    <TextView
        android:id="@+id/textReputation"
        style="@style/TextAccent14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/high_middle_padding"
        android:text="@string/reputation"
        app:layout_constraintBottom_toBottomOf="@+id/bgMenuAva"
        app:layout_constraintEnd_toStartOf="@+id/reputationLikes"
        app:layout_constraintStart_toEndOf="@+id/reputationDislikes" />

    <FrameLayout
        android:id="@+id/reputationLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="@dimen/little_margin"
        android:padding="@dimen/middle_padding"
        app:layout_constraintBottom_toBottomOf="@+id/bgMenuAva"
        app:layout_constraintEnd_toEndOf="@+id/bgMenuAva">


        <TextView
            android:id="@+id/item_group__like"
            style="@style/TextLike14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            app:drawableLeftCompat="@drawable/icon_like"
            tools:text="999к" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/userNameMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/middle_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bgMenuAva">

        <!-- Если длинное то фамилия переносится на следующую строку -->
        <TextView
            style="@style/TextAccent14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Моё имя Моя фамилия" />

        <TextView
            style="@style/TextNoActive10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/small_low_padding"
            app:drawableStartCompat="@drawable/ic_man"
            tools:text="33 года" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/userCounts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/middle_padding"
        android:paddingEnd="@dimen/middle_padding"
        android:paddingBottom="@dimen/middle_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNameMenu">

        <TextView
            android:id="@+id/userPosts"
            style="@style/TextNoActive12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            app:drawableLeftCompat="@drawable/icon_posts"
            tools:text="@string/publications" />

        <TextView
            style="@style/TextAccent14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="999м" />

        <TextView
            android:id="@+id/userComments"
            style="@style/TextNoActive12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            app:drawableLeftCompat="@drawable/icon_comments"
            tools:text="@string/comments" />

        <TextView
            style="@style/TextAccent14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="194к" />
    </LinearLayout>

    <TextView
        style="@style/TextNoActive12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_menu_item"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/high_big_padding"
        android:paddingEnd="@dimen/big_padding"
        android:text="@string/news"
        app:drawableEndCompat="@drawable/ic_menu_news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userCounts" />

</androidx.constraintlayout.widget.ConstraintLayout>