            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/colorInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigationToolbar">

            <TextView
                android:id="@+id/postFromWhom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/btn_r_down_angle_blue"
                android:text="От имени группы"
                style="@style/TextDark12sp"
                app:layout_constraintBottom_toBottomOf="@+id/bgEndComment"
                app:layout_constraintEnd_toEndOf="@+id/bgEndComment"
                app:layout_constraintTop_toBottomOf="@+id/commentBody" />

            <TextView
                android:id="@+id/postDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/btn_r_down_angle_blue"
                android:text="Сейчас"
                style="@style/TextDark12sp"
                app:layout_constraintBottom_toBottomOf="@+id/bgEndComment"
                app:layout_constraintEnd_toEndOf="@+id/bgEndComment"
                app:layout_constraintTop_toBottomOf="@+id/commentBody" />

        </LinearLayout>
