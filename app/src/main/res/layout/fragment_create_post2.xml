                    app:layout_constraintEnd_toStartOf="@+id/slideImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/postVideo" />

                <androidx.constraintlayout.widget.ConstraintLayout
