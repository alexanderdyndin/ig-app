<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_base">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_arrow_gray"
                app:titleTextColor="@android:color/white" />

            <LinearLayout
                android:id="@+id/llAuth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginTop="@dimen/margin_top_big"
                android:layout_marginEnd="@dimen/large_margin"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/flSave"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintVertical_chainStyle="spread_inside">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etMail"
                    style="@style/EditTextAuthStyle"
                    android:layout_width="match_parent"
                    android:hint="@string/your_email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/tvErrorMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/middle_margin"
                    android:layout_marginTop="@dimen/low_padding"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/your_email"
                    android:textColor="@color/red"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/etPassword"
                    app:layout_constraintTop_toBottomOf="@+id/etPassword"
                    tools:text="Пример ошибки"
                    tools:visibility="visible" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/low_big_margin"
                    android:layout_marginBottom="@dimen/low_big_margin">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSend"
                        style="@style/ButtonAuthStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/send_code" />

                    <include
                        android:id="@+id/pbEmail"
                        layout="@layout/auth_loader" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etCode"
                        style="@style/EditTextAuthStyle"
                        android:layout_width="match_parent"
                        android:background="@drawable/background_edit_text_disable"
                        android:enabled="false"
                        android:hint="@string/your_code"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="4" />

                    <include
                        android:id="@+id/pbCode"
                        layout="@layout/auth_loader" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tvErrorCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/middle_margin"
                    android:layout_marginTop="@dimen/low_padding"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/your_email"
                    android:textColor="@color/red"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/etPassword"
                    app:layout_constraintTop_toBottomOf="@+id/etPassword"
                    tools:text="Пример ошибки"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSendCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/big_margin"
                    android:text="@string/send_code_on_email"
                    android:textAlignment="center"
                    android:textColor="@color/cerulean"
                    android:textSize="@dimen/big_size"
                    android:visibility="invisible"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etPassword"
                    style="@style/EditTextAuthStyle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/massive_margin"
                    android:background="@drawable/background_edit_text_disable"
                    android:enabled="false"
                    android:hint="@string/your_password"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/tvErrorPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/middle_margin"
                    android:layout_marginTop="@dimen/low_padding"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/your_email"
                    android:textColor="@color/red"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/etPassword"
                    app:layout_constraintTop_toBottomOf="@+id/etPassword"
                    tools:text="Пример ошибки"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etDoublePassword"
                    style="@style/EditTextAuthStyle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/small_big_margin"
                    android:background="@drawable/background_edit_text_disable"
                    android:enabled="false"
                    android:hint="@string/your_double_password"
                    android:imeOptions="actionNext" />

                <TextView
                    android:id="@+id/tvErrorDoublePass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/middle_margin"
                    android:layout_marginTop="@dimen/low_padding"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/your_email"
                    android:textColor="@color/red"
                    android:visibility="gone"
                    tools:text="Пример ошибки"
                    tools:visibility="visible" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/flSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginEnd="@dimen/large_margin"
                android:layout_marginBottom="@dimen/large_margin"
                android:paddingTop="@dimen/big_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llAuth">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSave"
                    style="@style/ButtonAuthStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_disable"
                    android:enabled="false"
                    android:text="@string/save_settings"
                    android:textAllCaps="true" />

                <include
                    android:id="@+id/pbSave"
                    layout="@layout/auth_loader" />

            </FrameLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>