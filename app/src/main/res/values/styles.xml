<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/mainBlack</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat" />

    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:colorBackground">@color/colorPrimary</item>-->
    </style>

    <style name="BaseStyle">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppScreenStyle">
        <item name="android:background">@color/mainBlack</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/mainBlack</item>
        <item name="android:windowEnterAnimation">@anim/grow_animation</item>
        <item name="android:windowExitAnimation">@anim/slip_animation</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="InterGroupLogoTextStyle" parent="BaseStyle">
        <item name="android:textSize">@dimen/high_big_size</item>
        <item name="android:textColor">@color/interGroupLogoTextColor</item>
    </style>


    <style name="InterGroupAutoscrollWhiteTextStyle" parent="autoscroll">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/editTextLetterColors</item>
        <item name="android:textSize">@dimen/big_size</item>
    </style>

    <style name="InterGroupBigWhiteTextStyle" parent="BaseStyle">
        <item name="android:textColor">@color/editTextLetterColors</item>
        <item name="android:textSize">@dimen/high_big_size</item>
    </style>

    <style name="InterGroupSmallWhiteTextStyle" parent="BaseStyle">
        <item name="android:textColor">@color/editTextLetterColors</item>
        <item name="android:textSize">@dimen/big_size</item>
    </style>

    <style name="InterGroupMiddleWhiteTextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/editTextLetterColors</item>
        <item name="android:textSize">@dimen/middle_big_size</item>
    </style>

    <style name="InterGroupBigAutoscrollWhiteTextStyle" parent="autoscroll">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/editTextLetterColors</item>
        <item name="android:textSize">@dimen/high_big_size</item>
    </style>

    <style name="InterGroupGreyTextStyle" parent="BaseStyle">
        <item name="android:textColor">@color/interGroupGreyTextColor</item>
        <item name="android:textSize">@dimen/middle_high_size</item>
    </style>

    <style name="InterGroupWhiteTextStyle." parent="BaseStyle">
        <item name="android:textColor">@color/editTextLetterColors</item>
        <item name="android:textSize">@dimen/middle_high_size</item>
    </style>

    <style name="InterGroupWhiteTextStyle" parent="BaseStyle">
        <item name="android:textColor">@color/editTextLetterColors</item>
        <item name="android:textSize">@dimen/big_size</item>
    </style>

    <style name="InterGroupBlueTextStyle" parent="autoscroll">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/blueTextColor</item>
        <item name="android:textSize">@dimen/big_size</item>
    </style>

    <style name="InterGroupBigGreyTextStyle" parent="BaseStyle">
        <item name="android:textColor">@color/interGroupGreyTextColor</item>
        <item name="android:textSize">@dimen/big_size</item>
    </style>

    <style name="autoscroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryCancelFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorAccent">@color/errorSnackBarColor</item>
    </style>

    <style name="BlueButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_blue_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/big_padding</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textSize">@dimen/middle_high_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="DisabledBlueButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_blue_button_disabled</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/big_padding</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textSize">@dimen/middle_high_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BlueRoundedButtonWithArrow">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_blue_rounded_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/big_padding</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textSize">@dimen/middle_high_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:text">@string/next</item>
        <item name="android:drawableEnd">@drawable/arrow_drawable</item>
        <item name="android:layout_marginStart">@dimen/big_margin</item>
        <item name="android:layout_marginEnd">@dimen/big_margin</item>
    </style>

    <style name="BlueRoundedButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_blue_rounded_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/big_padding</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textSize">@dimen/middle_high_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:text">@string/next</item>
        <item name="android:layout_marginStart">@dimen/big_margin</item>
        <item name="android:layout_marginEnd">@dimen/big_margin</item>
    </style>

    <style name="InterGroupCommentEditTextStyle" parent="BaseStyle">
        <item name="android:paddingStart">@dimen/big_padding</item>
        <item name="android:paddingEnd">@dimen/big_padding</item>
        <item name="android:paddingTop">@dimen/high_middle_padding</item>
        <item name="android:paddingBottom">@dimen/high_middle_padding</item>
        <item name="android:textColorHint">@color/commentEditTextHintColor</item>
        <item name="android:textColor">@color/editTextLetterColors</item>
        <item name="android:textSize">@dimen/middle_high_size</item>
        <item name="android:background">@drawable/comment_edit_text_drawable</item>
        <!--<item name="inter_setBorderView">true</item>-->
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="InterGroupResponseToCommentTextStyle" parent="autoscroll">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/commentEditTextHintColor</item>
        <item name="android:textSize">@dimen/big_size</item>
    </style>

    <style name="InterGroupEmptyHintTextStyle" parent="BaseStyle">
        <item name="android:textColor">@color/interGroupGreyTextColor</item>
        <item name="android:textSize">@dimen/middle_low_size</item>
    </style>

    <style name="ButtonAuthStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/big_size</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextViewAuthStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextViewProfileStyle">
        <item name="android:textColor">@color/manatee</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="EditTextAuthStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/high_middle_padding</item>
        <item name="android:textColorHint">@color/manatee</item>
        <item name="android:textSize">@dimen/big_size</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ShapeAppearanceOverlayChip" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="MyChip" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">false</item>
        <item name="closeIcon">@drawable/ic_del</item>
        <item name="android:textColor">@color/colorAccent2</item>
        <item name="chipBackgroundColor">@color/mainBlack</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayChip</item>
        <item name="closeIconTint">@color/colorAccent2</item>
        <item name="fontFamily">@font/play</item>
        <item name="chipMinTouchTargetSize">40dp</item>
        <item name="chipMinHeight">32dp</item>
    </style>

    <style name="AutocompleteStyle">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/bg_inp_create</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownSelector">@color/colorAccent2</item>
        <item name="android:inputType">textShortMessage</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ImageSeparatorLine">
        <item name="android:background">@drawable/line_input</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="SeekBar">
        <item name="android:progressBackgroundTint">@color/colorAccent2</item>
        <item name="android:thumb">@drawable/selector_knob</item>
        <item name="android:progressTint">@color/colorAccent</item>
    </style>

    <style name="PostSeekBar">
        <item name="android:progressBackgroundTint">@color/colorAccent</item>
        <item name="android:thumb">@drawable/selector_post_knob</item>
        <item name="android:thumbOffset">-0dp</item>
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

<!-- Редактор постов -->
    <style name="ScrollBar">
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">4dp</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/bg_scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/bg_scrollbar_track</item>
    </style>
    <style name="TextPostComment">
        <item name="android:textColor">@color/textLight</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ImageSeparatorLineActive">
        <item name="android:background">@drawable/line_second_panel</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <!-- Текст 10sp -->
